<div class="complete" {{action "showModal"}}
                      {{action "toggleHelperCursor" on="mouseEnter"}}
                      {{action "toggleHelperCursor" on="mouseLeave"}}>
  <img class="page" src="/page.png" alt="">
  {{#if isShowModal}}
    {{#tether-dialog close="showModal"
                      target=target
                      container-class="modal-window"}}
      Fill in or complete a recommendation to earn points.
    {{/tether-dialog}}
  {{/if}}
</div>

{{#if query}}
<a href="#" {{action "focus"}}>{{recommendation.action}}</a>
{{else}}
{{recommendation.action}}
{{/if}}

{{link-to recommendation.recommendable.name recommendation.recommendable.route recommendation.recommendable}}


<div class="right-side">
  <!-- <a href="#" {{action "focus"}}>Search</a> -->
  {{wide-input value=value narrow=true small=true label=label enterPressed=(action "save")}}
</div>
