<h1>Sign Up</h1>

<form>
  <div class="form-group">
    {{input value=email id="email" class="form-control"}}
  </div>

  <div class="form-group password-input {{if validEmail '' 'hidden' }}">
    {{input value=password id="password" class="form-control"}}
  </div>

  <button class="submit btn btn-success" {{action "signUp"}}>Sign Up</button>
</form>
