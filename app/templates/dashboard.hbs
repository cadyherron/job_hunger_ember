<!-- app/templates/dashboard.hbs -->
<h4>dashboard</h4>

<div class="row col-md-12">
    <div class="panel-heading">
        <h5 class="panel-title">Suggestions</h5>
    </div>

    <div class="panel panel-default">
        <div class="panel-body dashboard-suggestion">
        </div>
      <br>
    </div>
</div>

<div class="row col-md-5">
    <div class="panel-heading">
        <h5 class="panel-title">Companies</h5>
        {{link-to "Companies" 'companies.new'}}
    </div>

    <div class="panel panel-default">
      {{#each model.companies as |company| }}
        <div class="panel-body dashboard-company">
        {{ company.name }}
        </div>
      {{/each }}
      <br>
    </div>
</div>

<div class="row col-md-2">
</div>

<div class="row col-md-5">
    <div class="panel-heading">
        <h5 class="panel-title">Leads</h5>
    </div>

    <div class="panel panel-default">
      {{#each model.leads as |lead| }}
        <div class="panel-body dashboard-lead">
        {{ lead.name }}
        {{ lead.company.name }}
        </div>
      {{/each }}
      <br>
    </div>
</div>


<div class="row col-md-8">
    <div class="panel-heading">
        <h5 class="panel-title">Jobs</h5>
    </div>

    <div class="panel panel-default">
      {{#each model.jobs as |job| }}
        <div class="panel-body dashboard-job">
        {{ job }}
        </div>
      {{/each }}
      <br>
    </div>
</div>

{{outlet}}
