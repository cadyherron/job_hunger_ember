<h1>New Jobs</h1>

<form>
  <div class="wide-input-container">
    {{wide-input value=model.title inputId="title" label="Job Title"}}
    <div class="error-message">
      {{errorMessage errorList.title}}
    </div>
  </div>

  <select class="diy-dropdown" onchange={{action "selectCompany" value="target.value"}}>
    <option value=''>Please Select Company</option>
    {{#each model.user.companies as |company|}}
      <option value={{company.id}}>
        {{ company.name }}
      </option>
    {{/each}}
  </select>
  <div>
    <div class="error-message">
      {{errorMessage errorList.companyId}}
    </div>
  </div>

  <br>
  <br>
  {{normal-button onClick=(action "createJob" model.title selectedCompany) text="Create Job" size="large"}}
</form>
